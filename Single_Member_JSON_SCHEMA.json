{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "integer",
      "multipleOf": 1,
      "minimum": 1
    },
    "name": {
      "type": "string",
      "minLength": 4,
      "maxLength": 25,
      "pattern": "^[a-zA-Z ]*$"
    },
    "gender": {
      "type": "string",
      "pattern": "^([Ff]e)?[Mm]ale$"
    }
  },
  "required": [
    "id",
    "name",
    "gender"
  ]
}